<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".Board">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Tac Toe"
            android:id="@+id/gameTitle"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="RESET"
                android:id="@+id/reset"
                android:layout_gravity="center_horizontal"
                android:onClick="resetGame"
                android:layout_marginTop="10dp"
                android:textSize="25sp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="MENU"
                android:id="@+id/menuButton"
                android:layout_gravity="center_horizontal"
                android:onClick="showExitPrompt"
                android:layout_marginTop="10dp"
                android:textSize="25sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:columnCount="5"
            android:rowCount="5"
            android:id="@+id/grid"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#999999">

            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b00"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b01"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b02"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b03"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b04"
                android:layout_row="0"
                android:layout_column="4"
                android:onClick="playerMove"
                android:background="#232323" />

            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b10"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b11"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b12"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b13"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b14"
                android:layout_row="1"
                android:layout_column="4"
                android:onClick="playerMove"
                android:background="#000000" />

            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b20"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b21"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b22"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b23"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b24"
                android:layout_row="2"
                android:layout_column="4"
                android:onClick="playerMove"
                android:background="#232323" />

            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b30"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b31"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b32"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b33"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b34"
                android:layout_row="3"
                android:layout_column="4"
                android:onClick="playerMove"
                android:background="#000000" />

            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b40"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b41"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b42"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="playerMove"
                android:background="#232323" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b43"
                android:layout_row="4"
                android:layout_column="3"
                android:onClick="playerMove"
                android:background="#000000" />
            <ImageView
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/b44"
                android:layout_row="4"
                android:layout_column="4"
                android:onClick="playerMove"
                android:background="#232323" />


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="#0f0f0f"
        android:padding="30dp"
        android:id="@+id/menuQuery"
        android:visibility="invisible"
        android:touchscreenBlocksFocus="false"
        android:transitionGroup="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to go to the menu?"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textIsSelectable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="I AM"
                android:id="@+id/menuYesButton"
                android:onClick="menuQueryButtons"
                android:textSize="20sp"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="NOPE"
                android:id="@+id/menuNoButton"
                android:onClick="menuQueryButtons"
                android:textSize="20sp"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>